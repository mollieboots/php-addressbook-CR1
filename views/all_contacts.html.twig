<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
        <meta charset="utf-8">
        <title>All Contacts</title>
    </head>
        <div class="container">
            <h1>All Contacts in your Address Book</h1>


                {% for contact in contacts %}
                    <div class="jumbotron">
                        <h3>{{ contact.getName }}</h3>
                        <p>{{ contact.getNumber }}</p>
                        <p>{{ contact.getEmail }}</p>
                    </div>
                {% endfor %}

            <form action="/delete_all" method="post">
                <button class="btn btn-danger">Clear Contact List</button>
            </form>

            <form action="/">
                <button class="btn btn-success">Go back Home</button>
            </form>
        </div>
    </body>
</html>
